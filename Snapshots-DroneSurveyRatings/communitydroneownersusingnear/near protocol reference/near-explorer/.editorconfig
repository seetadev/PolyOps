# EditorConfig is awesome: http://EditorConfig.org

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,css,json,yml,yaml}]
charset = utf-8

[*.{js,jsx,ts,tsx,css,html}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
