{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "ethers", "chai"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDirs": [".", "../common/src"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "types",
    "scripts",
    "tests",
    "helpers",
    "deploy",
    "./hardhat.config.ts",
    "./.eslintrc.cjs"
  ],
  "exclude": [
    "**/node_modules",
    "**/*.css",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
